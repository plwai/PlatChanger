{
  "manifest_version": 2,

  "name": "PlatChanger",
  "description": "This extension changes the platform of your machine to sb_baidu in certain website",
  "version": "0.1",
  "content_scripts":[
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": [ "*://pan.baidu.com/s/*", "*://yun.baidu.com/s/*", "*://pan.baidu.com/disk/home*", "*://yun.baidu.com/share/link*", "*://pan.baidu.com/share/link*", "*://yun.baidu.com/disk/home*", "*://pan.baidu.com/pcloud/album/*", "*://yun.baidu.com/pcloud/album/*" ],
      "js": ["change.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
